{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "shortDescription": {
      "type": "richtext"
    },
    "longDescription": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "unique": false
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "string"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "Couleurs": {
      "type": "component",
      "repeatable": true,
      "component": "product.color-variant"
    },
    "Taille": {
      "type": "component",
      "repeatable": true,
      "component": "product.size-variant"
    },
    "Pompom": {
      "type": "component",
      "repeatable": false,
      "component": "product.pompon-variant"
    },
    "Informations": {
      "type": "component",
      "repeatable": true,
      "component": "product.informations"
    },
    "Promotion": {
      "type": "boolean"
    },
    "discountPercent": {
      "type": "decimal"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    }
  }
}